{% extends '@forum/layout.html.twig' %}

{% block content %}

    {{ fireHook('view.admin.users.search_ip.start') }}


    <div class="linkst">
        <div class="inbox crumbsplus">
            <ul class="crumbs">
                <li><a href="{{ pathFor('adminIndex') }}">{{ trans('Admin') }} {{ trans('Index') }}</a></li>
                <li><span>»&#160;</span><a href="{{ pathFor('adminUsers') }}">{{ trans('Users') }}</a></li>
                <li><span>»&#160;</span><strong>{{ trans('Results head') }}</strong></li>
            </ul>
            <div class="pagepost">
                <p class="pagelink">{{ paging_links|raw }}</p>
            </div>
            <div class="clearer"></div>
        </div>
    </div>

    <div id="users1" class="blocktable">
        <h2><span>{{ trans('Results head') }}</span></h2>
        <div class="box">
            <div class="inbox">
                <table>
                    <thead>
                    <tr>
                        <th class="tcl" scope="col">{{ trans('Results IP address head') }}</th>
                        <th class="tc2" scope="col">{{ trans('Results last used head') }}</th>
                        <th class="tc3" scope="col">{{ trans('Results times found head') }}</th>
                        <th class="tcr" scope="col">{{ trans('Results action head') }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for ip in ip_data %}

                        <tr>
                            <td class="tcl"><a
                                        href="{{ pathFor('getHostIp', {'ip': ip.poster_ip}) }}">{{ ip.poster_ip }}</a>
                            </td>
                            <td class="tc2">{{ formatTime(ip.last_used) }}</td>
                            <td class="tc3">{{ ip.used_times }}</td>
                            <td class="tcr"><a
                                        href="{{ pathFor('usersIpShow', {}, {'ip': ip.poster_ip}) }}">{{ trans('Results find more link') }}</a>
                            </td>
                        </tr>

                    {% endfor %}

                    {% if ip_data is not empty %}
                        <tr>
                            <td class="tcl" colspan="4">{{ trans('Results no posts found') }}</td>
                        </tr>
                    {% endif %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="linksb">
        <div class="inbox crumbsplus">
            <div class="pagepost">
                <p class="pagelink">{{ paging_links|raw }}</p>
            </div>
            <ul class="crumbs">
                <li><a href="{{ pathFor('adminIndex') }}">{{ trans('Admin') }} {{ trans('Index') }}</a></li>
                <li><span>»&#160;</span><a href="{{ pathFor('adminUsers') }}">{{ trans('Users') }}</a></li>
                <li><span>»&#160;</span><strong>{{ trans('Results head') }}</strong></li>
            </ul>
            <div class="clearer"></div>
        </div>
    </div>


    {{ fireHook('view.admin.users.search_ip.end') }}
{% endblock content %}
