{
  "name": "runcmf/runbb",
  "description": "RunBB forum based on FeatherBB",
  "license": "Apache-2.0",
  "type": "library",
  "keywords": [
    "RunCMF",
    "RunBB",
    "Slim3",
    "Slim 3",
    "Twig",
    "Idiorm"
  ],
  "authors": [
    {
      "name": "Vladimir",
      "email": "1f7.wizard@gmail.com",
      "homepage": "http://runcmf.ru"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "slim/slim": "~3.7",
    "twig/twig": "~1.31",
    "slim/flash": "~0.2",
    "j4mie/idiorm": "~1.5",
    "gettext/gettext": "~4.2",
    "s9e/text-formatter": "~0.9",
    "firebase/php-jwt": "~4.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~2.5",
    "phpunit/phpunit": "~5.7"
  },
  "suggest": {
    "runcmf/runtracy": "View debug info and queries log"
  },
  "autoload": {
    "psr-4": {
      "RunBB\\": "src/RunBB"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "php vendor/bin/phpunit",
    "phpcs": "php vendor/bin/phpcs"
  }
}
