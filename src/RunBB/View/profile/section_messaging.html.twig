{% extends '@forum/layout.html.twig' %}

{% block content %}
{{ fireHook('view.profile.section_messaging.start') }}

    <div class="row">
        <div class="col-sm-3">
            {% include '@forum/profile/menu.html.twig' %}
        </div>

        <div class="col-sm-9">

            <form class="panel panel-primary" id="profile3" method="post" action="{{ pathFor('profileSection', {'id': id, 'section': 'messaging'}) }}">
                <input type="hidden" name="csrf_name" value="{{ csrf_name }}">
                <input type="hidden" name="csrf_value" value="{{ csrf_value }}">
                <input type="hidden" name="form_sent" value="1" />

                <div class="panel-heading">
                    <h3 class="panel-title">{{ user.username }} - {{ trans('Section messaging') }}</h3>
                </div>

                <div class="list-group-item">

                        <div class="inform">
                            <fieldset>
                                <legend>{{ trans('Contact details legend') }}</legend>
                                <div class="infldset">
                                    <label>{{ trans('Jabber') }}<br /><input class="form-control" id="jabber" type="text" name="form_jabber" value="{{ user.jabber }}" maxlength="75" /></label><br />
                                    <label>{{ trans('ICQ') }}<br /><input class="form-control" id="icq" type="text" name="form_icq" value="{{ user.icq }}" maxlength="12" /></label><br />
                                    <label>{{ trans('MSN') }}<br /><input class="form-control" id="msn" type="text" name="form_msn" value="{{ user.msn }}" maxlength="50" /></label><br />
                                    <label>{{ trans('AOL IM') }}<br /><input class="form-control" id="aim" type="text" name="form_aim" value="{{ user.aim }}" maxlength="30" /></label><br />
                                    <label>{{ trans('Yahoo') }}<br /><input class="form-control" id="yahoo" type="text" name="form_yahoo" value="{{ user.yahoo }}" maxlength="30" /></label><br />
                                </div>
                            </fieldset>
                        </div>

                </div>
                <div class="panel-footer">
                    <input class="btn btn-primary" type="submit" name="update" value="{{ trans('Submit') }}" />
                    <small>{{ trans('Instructions') }}</small>
                </div>
            </form>

        </div>
    </div>

    {{ fireHook('view.profile.section_messaging.start') }}
{% endblock content %}
