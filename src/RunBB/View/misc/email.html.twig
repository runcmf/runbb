{% extends '@forum/layout.html.twig' %}

{% block content %}
{{ fireHook('view.misc.email.start') }}

    <form class="panel panel-primary" id="email" method="post" action="{{ pathFor('email', {'id': id}) }}" onsubmit="this.submit.disabled=true;if(process_form(this)){return true;}else{this.submit.disabled=false;return false;}">
        <input type="hidden" name="csrf_name" value="{{ csrf_name }}">
        <input type="hidden" name="csrf_value" value="{{ csrf_value }}">
        <input type="hidden" name="form_sent" value="1" />

        <div class="panel-heading">
            <h3 class="panel-title">{{ trans('Send email to') }} <strong>{{ mail.recipient }}</strong></h3>
        </div>

        <div class="list-group-item">
            <fieldset>
                <legend>{{ trans('Write email') }}</legend>
                <label class="required">{{ trans('Email subject') }} <span>{{ trans('Required') }}</span></label><br />
                <input class="form-control" type="text" name="req_subject" maxlength="70" tabindex="1" /><br />
                <label class="required">{{ trans('Email message') }} <span>{{ trans('Required') }}</span></label><br />
                <textarea class="form-control" name="req_message" rows="10" cols="75" tabindex="2"></textarea>
                <div id="markitup-elfinder"></div>
                <small>{{ trans('Email disclosure note') }}</small>
            </fieldset>
        </div>
        <div class="panel-footer">
            <input class="btn btn-primary" type="submit" name="submit" value="{{ trans('Submit') }}" tabindex="3" accesskey="s" />
            <a class="btn btn-primary" href="javascript:history.go(-1)">{{ trans('Go back') }}</a>
        </div>
    </form>

{{ fireHook('view.misc.email.end') }}
{% endblock content %}
