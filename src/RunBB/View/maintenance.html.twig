{% extends '@forum/layout.html.twig' %}

{% block content %}

    {{ fireHook('view.maintenance.start') }}

    <div id="msg" class="block">
        <h2><span>{{ trans('Maintenance') }}</span></h2>
        <div class="box">
            <div class="inbox">
                <p>{{ msg|raw }}</p>
        {% if backlink %}
                <p><a href="javascript: history.go(-1)">{{ trans('Go back') }}</a></p>
        {% endif %}
            </div>
        </div>
    </div>

    {{ fireHook('view.maintenance.end') }}
{% endblock content %}
